<div class="row">

  <h2 class="col-10">Articles</h2>
  {{#if isUser}}
    <a class="col-2 btn btn-primary" href="/articles/create">Criar Artigo</a>
  {{/if}}
</div>
<hr />

{{#each articles}}

  <hr />
  <a href="/articles/{{_id}}"><h1>{{title}}</h1></a>
  <p>{{text}}</p>
  <p>Created by: {{author.nome}}</p>
  <hr />

{{/each}}